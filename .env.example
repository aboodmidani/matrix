# Web Security Matrix Configuration

# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
SCAN_RATE_LIMIT_PER_HOUR=5

# Timeouts
REQUEST_TIMEOUT=30
SCAN_TIMEOUT=60

# External Services (Optional)
IP_API_KEY=
VIRUSTOTAL_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/web_security_matrix.log

# Database (Future use)
# DATABASE_URL=sqlite:///./web_security_matrix.db

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Scan Configuration
MAX_URL_LENGTH=2048
MAX_SCAN_CONCURRENT=3

# Feature Flags
ENABLE_ADVANCED_VULN_SCANS=true
ENABLE_TECHNOLOGY_DETECTION=true
ENABLE_DNS_ENUMERATION=true
ENABLE_PORT_SCANNING=true
